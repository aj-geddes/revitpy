    <Text>Python Console</Text>
    <Description>Open RevitPy interactive Python console</Description>
    <VisibilityMode>AlwaysVisible</VisibilityMode>
    <LargeImage>RevitPy.Bridge.Resources.console_32.png</LargeImage>
    <SmallImage>RevitPy.Bridge.Resources.console_16.png</SmallImage>
  </AddIn>

  <AddIn Type="Command">
