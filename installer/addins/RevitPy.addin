    <VisibilityMode>NotVisibleWhenNoActiveDocument</VisibilityMode>
    <LargeImage>RevitPy.Bridge.Resources.script_32.png</LargeImage>
    <SmallImage>RevitPy.Bridge.Resources.script_16.png</SmallImage>
  </AddIn>

