<?xml version="1.0" encoding="utf-8"?>
<RevitAddIns>
  <AddIn Type="Application">
    <Name>RevitPy</Name>
    <Assembly>RevitPy.Bridge.dll</Assembly>
    <AddInId>C9B9B9C1-4C4C-4C4C-8888-999999999999</AddInId>
    <FullClassName>RevitPy.Bridge.RevitPyApplication</FullClassName>
    <VendorId>REVITPY</VendorId>
    <VendorDescription>RevitPy Team - Modern Python Framework for Revit</VendorDescription>
    <Description>
      RevitPy provides a modern, pythonic interface for Revit development.
      Features include async/await support, type hints, ORM-style data access,
      and comprehensive testing capabilities.
    </Description>
    <VisibilityMode>NotVisibleWhenNoActiveDocument</VisibilityMode>
  </AddIn>

