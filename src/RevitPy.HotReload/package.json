{
  "name": "@revitpy/hot-reload-server",
  "version": "1.0.0-alpha.1",
  "description": "Hot reload development server for RevitPy with real-time communication",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "revitpy-dev": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "revit",
    "python",
    "hot-reload",
    "development",
    "websocket"
  ],
  "author": "RevitPy Team",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.0",
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "mime": "^3.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "fast-glob": "^3.3.2",
    "esbuild": "^0.19.9",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/mime": "^3.0.4",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "vitest": "^1.1.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}