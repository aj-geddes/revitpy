{
    "comments": {
        "lineComment": "#",
        "blockComment": ["\"\"\"", "\"\"\""]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(class|def|if|elif|else|for|while|try|except|finally|with)\\b.*:$",
        "decreaseIndentPattern": "^\\s*(return|pass|break|continue|raise)\\b.*$"
    },
    "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
}
